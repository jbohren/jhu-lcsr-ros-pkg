<package>
  <description brief="cisst_ros_integration">

     cisst_ros_integration

     This package provides components and examples for integrating CISST with a ROS environment and vice-versa.

  </description>
  <author>Jonathan Bohren</author>
  <license url="http://cisst.org/resources/software/license.txt">CISST (BSD Compatible)</license>  
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/cisst_ros_integration</url>

  <depend package="roscpp"/>
  <depend package="std_msgs"/>

  <rosdep name="cisst"/>

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib -Wl,-rpath,${prefix}/lib -lCisstRosIntegration"/>
  </export>
</package>


